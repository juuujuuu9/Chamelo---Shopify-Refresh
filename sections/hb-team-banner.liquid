{{ 'hb-team-banner.css' | asset_url | stylesheet_tag }}
{% style %}
      .hb_section_{{ section.id }} {
        background-color: {{ section.settings.background_color  }};
      }
{% endstyle %}

<div class="hb_team_banner hb_section_{{ section.id }}" >
  <div class="page-width">
    <div class="hb_team_banner_wrapper">
      <div class="hb_team_banner_content">
         {% if section.settings.title != blank %}
          <h2 class="hb_team_banner_title">
            {{ section.settings.title }}
           </h2>
         {% endif %}
         {% if section.settings.description != blank %}
          <p class="hb_team_banner_para">
            {{ section.settings.description }}
          </p>
         {% endif %}
         {% if section.settings.btn_text != blank %}
          <a href="{{ section.settings.btn_url }}" class="button button_white_new hb_team_banner_btn">
            {{ section.settings.btn_text }}
          </a>
         {% endif %}
      </div>
      {% if section.settings.image_1 != blank %}
        <div class="hb_team_banner_image hb_banner_image_1">
          <img src="{{ section.settings.image_1 |  image_url: width: "700x" }}" alt="">
          
        </div>
      {% endif %}
      {% if section.settings.image_2 != blank %}
        <div class="hb_team_banner_image hb_banner_image_2">
          <img src="{{ section.settings.image_2 |  image_url: width: "700x" }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.image_3 != blank %}
        <div class="hb_team_banner_image hb_banner_image_3">
          <img src="{{ section.settings.image_3 |  image_url: width: "700x" }}" alt="">
        </div>
      {% endif %}
      {% if  section.settings.image_4 != blank %}
        <div class="hb_team_banner_image hb_banner_image_4">
          <img src="{{ section.settings.image_4 |  image_url: width: "700x" }}" alt="">
        </div>
      {% endif %} 
      {% if  section.settings.image_5 != blank %}
        <div class="hb_team_banner_image hb_banner_image_5">
          <img src="{{ section.settings.image_5 |  image_url: width: "700x" }}" alt="">
        </div>
        <!-- <div class="hb_team_banner_image hb_banner_image_5" js-animate-image-wrap>
          <img src="{{ section.settings.image_5 |  image_url: width: "700x" }}" alt="" js-image-animate>
        </div> -->
      {% endif %}
    </div>
  </div>
