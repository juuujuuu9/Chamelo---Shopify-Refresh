{{ 'media-courage.css' | asset_url | stylesheet_tag }}

<div class="media_courage"  style="background: {{ section.settings.main_background_color }};">
    <div class="wrapper">
        {%- if section.settings.main_desktop_video != blank or section.settings.main_mobile_video != blank or section.settings.main_desktop_image != blank or section.settings.main_mobile_image != blank -%}
            <div class="alpha W-half">
                <div class="media_courage__image_and_video">
                    {%- if section.settings.main_desktop_video != blank or section.settings.main_mobile_video != blank -%}
                    <div class="media_courage__video">
                        {%- if section.settings.main_desktop_video != blank -%}
                        {{ section.settings.main_desktop_video | video_tag: class:'media_courage__desktop_image_new', image_size: 'master', controls: false, autoplay: true, loop: true }}
                        {%- endif -%}
                        {%- if section.settings.main_mobile_video != blank -%}
                        {{ section.settings.main_mobile_video | video_tag: class:'media_courage__mobile_image_new', image_size: 'master', controls: false, autoplay: true, loop: true }}
                        {%- endif -%}
                    </div>
                    {% else %}  
                    {%- if section.settings.main_desktop_image != blank or section.settings.main_mobile_image != blank -%}
                        <div class="Imedia_courage__image">
                        {%- if section.settings.main_desktop_image != blank -%}
                            {{
                            section.settings.main_desktop_image | 
                            image_url: width: img.width | 
                            image_tag: widths: '1296, 1512, 1728, 1944, 2048', 
                            fetchpriority: 'auto', 
                            class:'media_courage__desktop_image_new'
                            }}
                        {%- endif -%}
                        {%- if section.settings.main_mobile_image != blank -%}
                            {{
                            section.settings.main_mobile_image | 
                            image_url: width: img.width | 
                            image_tag: widths: '1296, 1512, 1728, 1944, 2048', 
                            fetchpriority: 'auto', 
                            class:'media_courage__mobile_image_new'
                            }}
                        {%- endif -%}
                        </div>
                    {%- endif -%}
                    {%- endif -%}
                </div>
            </div>
        {%- endif -%}
        {%- if  section.settings.main_heading_text != blank or sections.blocks.size > 0 -%}
            <div class="beta W-half">
                <div class="beta-inner">
                    {%- if section.settings.main_heading_text != blank -%}
                        <h4 class="media_courage__title">{{ section.settings.main_heading_text  }}</h4>
                    {%- endif -%}
                    <div class="swiper-container" js-media-courage-slider>
                        <div class="media_courage__content-wrap swiper-wrapper">
                            {%- for block in section.blocks -%}
                                {%- if block.settings.title != blank and block.settings.logos != blank -%}
                                    <div class="media_courage__content swiper-slide">
                                        {%- if block.settings.title != blank -%}
                                            <div class="media_courage__contents-text">
                                                {{ block.settings.title }}
                                            </div>
                                        {%- endif -%}
                                        {%- if block.settings.logos != blank -%}
                                            <div class="media_courage__logo">
                                                {{
                                                    block.settings.logos | 
                                                    image_url: width: img.width | 
                                                    image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                                    fetchpriority: 'auto', 
                                                    class:'media_courage__Logo_image_new'
                                                }}
                                            </div>
                                        {%- endif -%}
                                    </div>
                                {%- endif -%}
                            {%- endfor -%}
                        </div>
                        <div class="swiper-pagination js-media-courage-pagination"></div> 
                    </div>
                    <div class="media_courage__shadow">
                        <div class="media_courage__destop_shadow">
                            <svg xmlns="http://www.w3.org/2000/svg" width="720" height="672" viewBox="0 0 720 672" fill="none">
