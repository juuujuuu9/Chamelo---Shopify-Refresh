                                </linearGradient>
                                </defs>
                                </svg>
                        </div>
                    </div>
                </div>
            </div>
        {%- endif -%}
    </div>
    
</div>

<script>
    
    if (document.documentElement.clientWidth < 768) {
        new Swiper("[js-media-courage-slider]", {
            slidesPerView: 'auto',        
            spaceBetween: 16,  
            {% comment %} watchSlidesProgress: true,
            draggable:!0,
            autoHeight:!1,
            watchOverflow:!0,
            threshold:10,
            mousewheel:{
                forceToAxis:!0,
                invert: 0,
            },
            freeMode:!0,  {% endcomment %}
            pagination: {
                el: '.js-media-courage-pagination', 
                clickable: true,
            },
        }); 
    }
     
</script>

{% schema %}
  {
    "name": "Media courage",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color"
      },
      {
        "type": "video",
        "id": "main_desktop_video",
        "label": "Add Main Desktop Video"
      },
      {
        "type": "video",
        "id": "main_mobile_video",
        "label": "Add Main Mobile Video"
      },
      {
        "type": "image_picker",
        "id": "main_desktop_image",
        "label": "Add Main Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "main_mobile_image",
        "label": "Add Main Mobile Image"
      },
      {
        "type": "textarea",
        "id": "main_heading_text",
        "label": "Add Main Heading Text",
        "default": "In The Press"
      }
    ],
    "blocks": [
      {
        "type": "information",
        "name": "Information",
        "limit": 3,
        "settings": [
          {
            "type": "richtext",
            "id": "title",
            "label": "Add Main Heading Text",
            "default": "<p>“Lorem Ipsum is simply dummy text of the printing and typesetting industry.”</p>"
          },
          {
            "type": "image_picker",
            "id": "logos",
            "label": "Add Main Custom Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Media courage"
      }
    ]
  }
{% endschema %}