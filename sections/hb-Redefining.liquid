                {%- endif -%}
                {%- if section.settings.text_title != blank -%}
                    <h2 class="hb_Redefining__texts--title">{{ section.settings.text_title }}</h2>
                {%- endif -%}
                {%- if section.settings.text_content != blank -%}
                    <div class="hb_Redefining__texts--content">{{ section.settings.text_content }}</div>
                {%- endif -%}
                {%- if section.settings.text_button != blank -%}
                    <a href="{{ section.settings.text_button_url }}" class="hb_Redefining__texts--button">{{ section.settings.text_button }}</a>
