{{ 'hb-Redefining.css' |  asset_url |  stylesheet_tag }}
<div class="hb_Redefining">
    <div class="page-width">
        <div class="hb_Redefining__wrapper">
           <div class="hb_Redefining__block--wrap alpha">
               {% for block in section.blocks %}
                    <div class="hb_Redefining__block--inner-wrap">
                            {%- if block.settings.video != blank -%}
                                <div class="hb_Redefining__block--video">
                                    {{ block.settings.video | video_tag: autoplay: true, muted: true, loop: true, controls: false }}
                                </div>
                            {%- endif -%}
                            <div class="hb_Redefinig__block--texts-wrap">
                                {%- if block.settings.pre_title != blank -%}
                                    <h4 class="hb_Redefining__block--pre-title pre-title">{{ block.settings.pre_title }}</h4>
                                {%- endif -%}
                                {%- if block.settings.title != blank -%}
                                    <h2 class="hb_Redefining__block--title">{{ block.settings.title }}</h2>
                                {%- endif -%}
                                {%- if block.settings.content != blank -%}
                                    <div class="hb_Redefining__block--content">{{ block.settings.content }}</div>
                                {%- endif -%}
                                {%- if block.settings.button != blank -%} 
                                    <a href="{{ block.settings.button_url }}" class="hb_Redefining__block--button">{{ block.settings.button }}</a>
                                {%- endif -%}
                            </div>
                    </div>
                {% endfor %}
           </div> 
           <div class="hb_Redefining__texts--wrap beta">
            {%- if section.settings.circle_image != blank -%}
                <div class="hb_Redefining__texts--circle-wrap">
                    <div class="hb_Redefining__texts--circle-image">
                        {{ section.settings.circle_image |  image_url: width: "1000x" |  image_tag  }}
