{{ 'Faq_page_section_new.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.58 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.58 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="faq_page_section_wrapper_new faq_page_section_v2 section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    {% if section.settings.faq_main_title != blank or section.settings.left_panel_bottomcontent != blank %} 
    <div class="header-section">
     {% if section.settings.faq_main_title != blank %} 
       <div class="Common_title_new"> <h2>{{ section.settings.faq_main_title }}</h2></div> 
       {% endif %}
      {% if section.settings.left_panel_bottomcontent != blank %}
        <div class="faq_page_section_left_side_panel_inner_bottomContent large-up-hide medium-hide">{{ section.settings.left_panel_bottomcontent }}</div>
          {% endif %}
    </div>
       {% endif %}
   
    <div class="faq_page_section_main_container">
    <div class="faq_page_section_left_side">
      <div class="faq_page_section_left_side_panel">
      <div class="faq_page_section_left_side_panel_inner">
        {% if section.settings.left_panel_title != blank %}
        <div class="faq_page_section_left_side_panel_inner_maintitle"><h2>{{ section.settings.left_panel_title }}</h2></div>
          {% endif %}
        
        <div class="faq_page_section_left_side_panel_category_section">
          <a href="faq_{{ section.settings.faq_category_1 | downcase | replace: " ", "_"  }}" class="left_panel_item active">
            {{ section.settings.faq_category_1 }}
          </a>
          <a href="faq_{{ section.settings.faq_category_2 | downcase | replace: " ", "_"  }}" class="left_panel_item">
            {{ section.settings.faq_category_2 }}
          </a>
          <a href="faq_{{ section.settings.faq_category_3 | downcase | replace: " ", "_"  }}" class="left_panel_item">
            {{ section.settings.faq_category_3 }}
          </a>
          <a href="faq_{{ section.settings.faq_category_4  | downcase | replace: " ", "_" }}" class="left_panel_item">
            {{ section.settings.faq_category_4 }}
          </a>
        </div>
        {% if section.settings.left_panel_bottomcontent != blank %}
        <div class="faq_page_section_left_side_panel_inner_bottomContent small-hide">{{ section.settings.left_panel_bottomcontent }}</div>
          {% endif %}
      </div>
        
      </div>
    </div>
    <div class="faq_page_section_right_side">
       {%- if section.blocks.size > 0 -%}
                  <div class="Index_faqs_accordion_list_sides_innerboths_mainloops_new">
                    <div class="Index_faqs_accordion_list_sides_innerboths_innerloops_new">
                     
                      <div class="Page_faq_section_v2_right_faqs_category_main_parent">

                        {% for main_category in (1..4) %}
                  {% capture main_id %}faq_category_{{ main_category }}{% endcapture %}
                          
                  {% assign main_category_name = section.settings[main_id] %}
                  <div class="Page_faq_section_v2_right_faqs_category_main" id="faq_{{ main_category_name | downcase | replace: " ", "_" }}">
                    
                      <div class="faq_category faq_title">
                        <h2>{{ main_category_name }}</h2>
                      </div>
                      {% if section.blocks.size  > 0 %}
                        
                           
                        <div class="faqs_accordian_main accordion">
                            <ul class="list-unstyled">
                            {%- for block in section.blocks -%}
                              {%- if block.type == 'information' -%}
                            {%- if block.settings.title != blank and block.settings.infos != blank -%}
                              {% if block.settings.faq_category == main_category_name %}
                              <li {% if block.type == 'information' and forloop.index == 1 %} class="open firsttab_padding"{% endif %}>
                                {%- if block.settings.title != blank -%}
                                  <div class="question">
                                    <h4>{{ block.settings.title }}</h4>
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.infos != blank -%}
                                  <div class="answer">
                                    {{ block.settings.infos }}
                                  </div>
                                {%- endif -%}
                              </li>
                                {% endif %}
                            {%- endif -%}
                                {%- endif -%}
                              {%- endfor -%}
                              </ul>
                        </div>
                        {% endif %}
                  </div>
                          {% endfor %}
                       
                      </div>
                    </div>
                  </div>
                {%- endif -%}
    </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Main FAQ Page V2",
    "settings": [
          {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
      {
        "type": "text",
        "id": "faq_main_title",
        "label": "Faq Main Title"
      },
      {
        "type": "text",
        "id": "left_panel_title",
        "label": "Left Panel Title"
      },
      {
        "type": "richtext",
        "id": "left_panel_bottomcontent",
        "label": "Left Panel Bottom Content"
      },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
      {
            "type": "text",
            "id": "faq_category_1",
            "label": "Add FAQ Category 1",
            "info": "Add same as FAQ Title - which is on the left side",
            "default":"Product"
          },
      {
            "type": "text",
            "id": "faq_category_2",
            "label": "Add FAQ Category 2",
            "info": "Add same as FAQ Title - which is on the left side",
            "default":"shipping"
          },
      {
            "type": "text",
            "id": "faq_category_3",
            "label": "Add FAQ Category 3",
            "info": "Add same as FAQ Title - which is on the left side",
            "default":"warranty"
          },
      {
            "type": "text",
            "id": "faq_category_4",
            "label": "Add FAQ Category 4",
            "info": "Add same as FAQ Title - which is on the left side",
            "default":"returns"
          },
    ],
    "blocks": [
      {
        "type": "information",
        "name": "Information",
        "settings": [
          {
            "type": "text",
            "id": "faq_category",
            "label": "Add FAQ Category",
            "info": "Add same as FAQ Title - which is on the left side",
            "default":"Product"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Add Main Question Text",
            "default": "Lorem Ipsum is simply dummy text?"
          },
          {
            "type": "richtext",
            "id": "infos",
            "label": "Add Main Answer Text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Main FAQ V2"
      }
    ]
  }
{% endschema %}