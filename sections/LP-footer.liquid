  {
    "name": "LP Footer",
    "class": "LP_footer",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Add Background Color",
        "default": "#000000"
      },
      {
        "type": "image_picker",
        "id": "bg_effect_desktop",
        "label": "Add Desktop Background Effect"
      },
      {
        "type": "image_picker",
        "id": "bg_effect_mobile",
        "label": "Add Mobile Background Effect"
      },
      {
        "type": "image_picker",
        "id": "logo_desktop",
        "label": "Add Desktop Logo"
      },
      {
        "type": "image_picker",
        "id": "logo_mobile",
        "label": "Add Mobile Logo"
      },
      {
        "type": "richtext",
        "id": "copyright_text",
        "label": "Add Copyright Text",
        "default": "<p>Â©2024, Chamelo</p>"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
