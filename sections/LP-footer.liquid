      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 80
      }
    ],
    "blocks": [
      {
        "type": "footer-links",
        "name": "Footer Links",
        "settings": [
          {
            "type": "text",
            "id": "link_text",
            "default": "Privacy Policy",
            "label": "Add Footer Link Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Add Footer Link"
          },
        ]
      }
    ],
    "presets": [
      {
        "name": "LP Footer",
      }
    ]
  }
{% endschema %}