{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px!important;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px!important;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px!important;
        padding-bottom: {{ section.settings.padding_bottom }}px!important;
      }
    }
  {%- endstyle -%}
  <div class="page-width" style="background: {{ section.settings.main_background_color }};">
    <div class="logo_list_custom section-{{ section.id }}-padding">       
                        {%- for block in section.blocks -%}
                          {%- if block.settings.title != blank or block.settings.logos != blank -%}
                            <div class="logo_list_block">
                                {%- if block.settings.logos != blank -%}
                                    <div class="logo_list_img">
                                      {{
                                        block.settings.logos | 
                                        image_url: width: img.width | 
                                        image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                        fetchpriority: 'auto', 
                                        class:'Logo_image_new'
                                      }}
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.title != blank -%}
                                    <div class=" logo_list_title">
                                      {{ block.settings.title }}
                                  </div>
                                {%- endif -%}
                            </div>
                          {%- endif -%}
                        {%- endfor -%}            
    </div>
  </div>

{% schema %}
  {
    "name": "Logo List",
    "class": "logo-list",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color"
      },
      {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks": [
      {
        "type": "information",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logos",
            "label": "Add Main Custom Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Add Main Heading Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo List"
      }
    ]
  }
{% endschema %}