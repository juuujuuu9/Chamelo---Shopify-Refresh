{%- if product.metafields.custom.product_testimonial_review_list_selections.value != blank -%}
  <div class="Product_meta_testimonials_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Product_meta_testimonials_inner_new">
        {%- if section.settings.main_outer_image != blank and section.settings.main_inside_image != blank -%}
          <div class="Product_meta_testimonials_maincustom_new Desktop_only_new">
            <div class="Product_meta_testimonials_innercustom_new">
              {%- if section.settings.main_outer_image != blank -%}
                <div class="Product_meta_testimonials_innercustom_mainouter_new">
                  <div class="Product_meta_testimonials_innercustom_innerouter_new spin">
                    {{
                      section.settings.main_outer_image | 
                      image_url: width: img.width | 
                      image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                      fetchpriority: 'auto', 
                      class:'Icon_image_new'
                    }}
                  </div>
                </div>
              {%- endif -%}
              {%- if section.settings.main_inside_image != blank -%}
                <div class="Product_meta_testimonials_innercustom_maininside_new">
                  <div class="Product_meta_testimonials_innercustom_innerinside_new">
                    {{
                      section.settings.main_inside_image | 
                      image_url: width: img.width | 
                      image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                      fetchpriority: 'auto', 
                      class:'Icon_image_new'
                    }}
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%} 
        {%- if product.metafields.custom.product_testimonial_review_list_selections.value != blank -%}
          <div class="Product_meta_testimonials_mainsides_new">
            <div class="Product_meta_testimonials_innersides_new">
              {%- if product.metafields.custom.product_testimonial_review_list_selections.value != blank -%}
                <div class="Product_meta_testimonials_innersides_mainleft_new">
                  <div class="Product_meta_testimonials_innersides_innerleft_new">
                    <div thumbsSlider class="swiper Product_meta_testimonials_thumb_slider">
                      <div class="swiper-wrapper">
                        {%- for product_testimonial_review_list_selections in product.metafields.custom.product_testimonial_review_list_selections.value -%}
                          {%- if product_testimonial_review_list_selections.main_video_or_image_desktop.value != blank and product_testimonial_review_list_selections.main_video_or_image_mobile.value != blank -%}
                            <div class="swiper-slide Product_meta_testimonials_innersides_innerleft_mainboxs_new">
                              <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_new">
                                {%- if product_testimonial_review_list_selections.main_video_or_image_desktop.value != blank -%}
                                  <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_mainstatic_new Desktop_only_new">
                                    <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_innerstatic_new">
                                      {%- if product_testimonial_review_list_selections.main_video_or_image_desktop.value contains "files" -%}
                                        <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_innerstatic_imagevideo_new">
                                          {{
                                            product_testimonial_review_list_selections.main_video_or_image_desktop.value | 
                                            image_url: width: img.width | 
                                            image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                            fetchpriority: 'auto', 
                                            class:'Static_image_new'
                                          }}
                                        </div>
                                      {%- else -%}
                                        <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_innerstatic_imagevideo_new">
                                          {{ product_testimonial_review_list_selections.main_video_or_image_desktop.value | video_tag: class:'Static_video_new', image_size: 'master', controls: false, autoplay: true, loop: true }}
                                        </div>
                                      {%- endif -%}
                                    </div>
                                  </div>
                                {%- endif -%}
                                {%- if product_testimonial_review_list_selections.main_video_or_image_mobile.value != blank -%}
                                  <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_mainstatic_new Mobile_only_new">
                                    <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_innerstatic_new">
                                      {%- if product_testimonial_review_list_selections.main_video_or_image_mobile.value contains "files" -%}
                                        <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_innerstatic_imagevideo_new">
                                          {{
                                            product_testimonial_review_list_selections.main_video_or_image_mobile.value | 
                                            image_url: width: img.width | 
                                            image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                            fetchpriority: 'auto', 
                                            class:'Static_image_new'
                                          }}
                                        </div>
                                      {%- else -%}
                                        <div class="Product_meta_testimonials_innersides_innerleft_innerboxs_innerstatic_imagevideo_new">
                                          {{ product_testimonial_review_list_selections.main_video_or_image_mobile.value | video_tag: class:'Static_video_new', image_size: 'master', controls: false, autoplay: true, loop: true }}
                                        </div>
                                      {%- endif -%}
                                    </div>
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                        {%- endfor -%}
                      </div>
                    </div>
                  </div>
                </div>
              {%- endif -%}
              {%- if product.metafields.custom.product_testimonial_review_list_selections.value != blank -%}
