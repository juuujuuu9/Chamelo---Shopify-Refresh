                  </div>
                </div>
              {%- endif -%}  
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Product Meta Testimonials",
    "class": "Product_meta_testimonials_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color"
      },
      {
        "type": "image_picker",
        "id": "main_outer_image",
        "label": "Add Main Outer Image"
      },
      {
        "type": "image_picker",
        "id": "main_inside_image",
        "label": "Add Main Inside Image"
      },
      {
        "type": "text",
        "id": "main_verified_text",
        "label": "Add Main Verified Text",
        "default": "Verified Review"
      }
    ],
    "presets": [
      {
        "name": "Product Meta Testimonials"
      }
    ]
  }
{% endschema %}