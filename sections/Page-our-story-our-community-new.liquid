{%- if section.settings.main_details_text != blank or section.settings.main_mobile_heading_text_1 != blank or section.settings.main_desktop_heading_text != blank or section.settings.main_desktop_information_text != blank or section.settings.main_mobile_heading_text_2 != blank or section.settings.main_mobile_information_text != blank or section.blocks.size > 0 -%}
  <div class="Page_our_story_our_community_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Page_our_story_our_community_inner_new">
        {%- if section.settings.main_details_text != blank or section.settings.main_mobile_heading_text_1 != blank -%}
          <div class="Page_our_story_our_community_mainboths_new Mobile_only_new">
            <div class="Page_our_story_our_community_innerboths_new">
              {%- if section.settings.main_details_text != blank -%}
                <div class="Page_our_story_our_community_innerboths_mainlists_new">
                  <div class="Page_our_story_our_community_innerboths_innerlists_new">
                    {{ section.settings.main_details_text }}
                  </div>
                </div>
              {%- endif -%}
              {%- if section.settings.main_mobile_heading_text_1 != blank -%}
                <div class="Page_our_story_our_community_innerboths_maintitle_new">
                  <div class="Common_title_new Page_our_story_our_community_innerboths_innertitle_new">
                    <h2>{{ section.settings.main_mobile_heading_text_1 }}</h2>
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
        {%- if section.settings.main_details_text != blank or section.settings.main_desktop_heading_text != blank or section.settings.main_desktop_information_text != blank or section.blocks.size > 0 -%}
          <div class="Page_our_story_our_community_mainsides_new">
            <div class="Page_our_story_our_community_innersides_new">
              {%- if section.settings.main_details_text != blank or section.settings.main_desktop_heading_text != blank or section.settings.main_desktop_information_text != blank -%}
                <div class="Page_our_story_our_community_innersides_mainleft_new Desktop_only_new">
                  <div class="Page_our_story_our_community_innersides_innerleft_new">
                    {%- if section.settings.main_details_text != blank -%}
                      <div class="Page_our_story_our_community_innersides_innerleft_mainlists_new">
                        <div class="Page_our_story_our_community_innersides_innerleft_innerlists_new">
                          {{ section.settings.main_details_text }}
                        </div>
                      </div>
                    {%- endif -%}
                    {%- if section.settings.main_desktop_heading_text != blank -%}
                      <div class="Page_our_story_our_community_innersides_innerleft_maintitle_new">
                        <div class="Common_title_new Page_our_story_our_community_innersides_innerleft_innertitle_new">
                          <h2>{{ section.settings.main_desktop_heading_text }}</h2>
                        </div>
                      </div>
                    {%- endif -%}
                    {%- if section.settings.main_desktop_information_text != blank -%}
                      <div class="Page_our_story_our_community_innersides_innerleft_maininfos_new">
                        <div class="Page_our_story_our_community_innersides_innerleft_innerinfos_new">
                          {{ section.settings.main_desktop_information_text }}
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
              {%- if section.blocks.size > 0 -%}
                <div class="Page_our_story_our_community_innersides_mainright_new">
                  <div class="Page_our_story_our_community_innersides_innerright_new">
                    {%- for block in section.blocks -%}
                      {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank -%}
                        <div class="Page_our_story_our_community_innersides_innerright_mainboxs_new">
                          <div class="Page_our_story_our_community_innersides_innerright_innerboxs_new">
                            {%- if block.settings.main_mp4_video != blank -%}
                              <div class="Page_our_story_our_community_innersides_innerright_innerboxs_videoimage_new">
                                {{ block.settings.main_mp4_video | video_tag: class: 'Custom_video_new', image_size: 'master', controls: false, autoplay: true, loop: true }}
                              </div>
                            {% else %}  
                              {%- if block.settings.main_desktop_image != blank and block.settings.main_mobile_image != blank -%}
                                <div class="Page_our_story_our_community_innersides_innerright_innerboxs_videoimage_new">
                                  {%- if block.settings.main_desktop_image != blank -%}
                                    {{
                                      block.settings.main_desktop_image | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'desktop_image_new'
                                    }}
                                  {%- endif -%}
                                  {%- if block.settings.main_mobile_image != blank -%}
                                    {{
                                      block.settings.main_mobile_image | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'mobile_image_new'
                                    }}
                                  {%- endif -%}
                                </div>
                              {%- endif -%}
                            {%- endif -%}
                          </div>
                        </div>
                      {%- endif -%}
                    {%- endfor -%}  
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
        {%- if section.settings.main_mobile_heading_text_2 != blank or section.settings.main_mobile_information_text != blank -%}
          <div class="Page_our_story_our_community_maindetail_new Mobile_only_new">
            <div class="Page_our_story_our_community_innerdetail_new">
              {%- if section.settings.main_mobile_heading_text_2 != blank -%}
                <div class="Page_our_story_our_community_innerdetail_maintexts_new">
                  <div class="Page_our_story_our_community_innerdetail_innertexts_new">
                    <h3>{{ section.settings.main_mobile_heading_text_2 }}</h3>
                  </div>
                </div>
              {%- endif -%}
              {%- if section.settings.main_mobile_information_text != blank -%}
                <div class="Page_our_story_our_community_innerdetail_maininfos_new">
                  <div class="Page_our_story_our_community_innerdetail_innerinfos_new">
                    {{ section.settings.main_mobile_information_text }}
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}  

{% schema %}
  {
    "name": "Our Story Our Community",
    "class": "Page_our_story_our_community_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "textarea",
        "id": "main_details_text",
        "label": "Add Main Details Text",
        "default": "Our Community"
      },
      {
        "type": "textarea",
        "id": "main_desktop_heading_text",
        "label": "Add Main Desktop Heading Text",
        "default": "Together, we're more than just a brand—we're a community shaping the future of eyewear."
      },
      {
        "type": "textarea",
        "id": "main_mobile_heading_text_1",
        "label": "Add Main Mobile Heading Text-1",
        "default": "Together, we're more than just a brand..."
      },
      {
        "type": "textarea",
        "id": "main_mobile_heading_text_2",
        "label": "Add Main Mobile Heading Text-2",
        "default": "We're a community shaping the future of eyewear."
      },
      {
        "type": "richtext",
        "id": "main_desktop_information_text",
        "label": "Add Main Desktop Information Text",
        "default": "<p>At Chamelo, our community is at the core of what we do. Our customers shape the future of eyewear by giving us real feedback that we turn into real solutions. From influencers to everyday people, we connect with those who share our values. Whether through events or just hanging out, we’re building something bigger than just eyewear – a sense of belonging.</p>"
      },
      {
        "type": "richtext",
        "id": "main_mobile_information_text",
        "label": "Add Main Mobile Information Text",
        "default": "<p>At Chamelo, our community is at the core of what we do. Our customers shape the future of eyewear by giving us real feedback that we turn into real solutions.</p><p>From influencers to everyday people, we connect with those who share our values. Whether through events or just hanging out, we’re building something bigger than just eyewear – a sense of belonging.</p>"
      }
    ],
    "blocks": [
      {
        "type": "information",
        "name": "Information",
        "limit": 2,
        "settings": [
          {
            "type": "video",
            "id": "main_mp4_video",
            "label": "Add Main MP4 Video"
          },
          {
            "type": "image_picker",
            "id": "main_desktop_image",
            "label": "Add Main Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "main_mobile_image",
            "label": "Add Main Mobile Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Our Story Our Community",
        "blocks": [
          {
            "type": "information"
          },
          {
            "type": "information"
          }
        ]
      }
    ]
  }
{% endschema %}