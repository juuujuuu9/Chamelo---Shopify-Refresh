{%- if section.blocks.size > 0 -%}
  <div class="Index_marquee_logos_lists_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="Index_marquee_logos_lists_inner_new" data-aos="fade-in">
      <div class="Index_marquee_logos_lists_loops_new">
        <div class="Index_marquee_logos_lists">
          <span>
            {%- for block in section.blocks -%}
              {% if block.settings.main_custom_image != blank %}
                <div class="Index_marquee_logos_lists_loops_mainboxs_new">
                  <div class="Index_marquee_logos_lists_loops_innerboxs_new">
                    {{
                      block.settings.main_custom_image | 
                      image_url: width: img.width | 
                      image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                      fetchpriority: 'auto', 
                      class:'Logo_image_new'
                    }}
                  </div>  
                </div>
              {%- endif -%}  
            {%- endfor -%}
            {%- for block in section.blocks -%}
              {% if block.settings.main_custom_image != blank %}
                <div class="Index_marquee_logos_lists_loops_mainboxs_new">
                  <div class="Index_marquee_logos_lists_loops_innerboxs_new">
                    {{
                      block.settings.main_custom_image | 
                      image_url: width: img.width | 
                      image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                      fetchpriority: 'auto', 
                      class:'Logo_image_new'
                    }}
                  </div>  
                </div>
              {%- endif -%} 
            {%- endfor -%}
          </span>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Index Marquee Logos Lists",
    "class": "Index_marquee_logos_lists_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      }
    ],
    "blocks": [
      {
        "type": "information",
        "name": "Information",
        "settings": [
          {
            "type": "image_picker",
            "id": "main_custom_image",
            "label": "Add Main Custom Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Index Marquee Logos Lists",
        "blocks": [
          {
            "type": "information"
          },
          {
            "type": "information"
          },
          {
            "type": "information"
          },
          {
            "type": "information"
          }
        ]
      }
    ]
  }
{% endschema %}