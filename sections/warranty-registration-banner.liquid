{{ "warranty-registration-banner.css" | asset_url | stylesheet_tag }}

{%- if section.settings.title != blank or section.settings.text != blank or section.settings.sub_title != blank or section.settings.sub_text != blank -%}
    <div class="hb_warranty_registration_banner">
        <div class="hb_banner__wrapper">
            <div class="page-width">
                <div class="hb_banner__content">
                   {%- if section.settings.title != blank -%}
                    <h1 class="hb_banner__title">{{ section.settings.title }}</h1>
                   {%- endif -%}
                   {%- if section.settings.text != blank -%}
                    <div class="hb_banner__text">{{ section.settings.text }}</div>
                   {%- endif -%}
                   {%- if section.settings.btn_text != blank -%}
                    <a href="{{ section.settings.btn_url }}" class="hb_banner__btn">{{ section.settings.btn_text }}</a>
                   {%- endif -%}
                   {%- if section.settings.sub_title != blank or section.settings.sub_text != blank -%}
                    <div class="hb_banner__inner_wrap">
                        <div class="hb_banner__icon">
                           <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                               <path d="M8.5 6V30.5H9.66667V7.16667H31.8333V31.75C31.8333 32.3483 31.3483 32.8333 30.75 32.8333H7.24999C6.65171 32.8333 6.16667 32.3483 6.16667 31.75V10.6667H7.33333V9.5H5V31.75C5 32.9906 6.00939 34 7.24999 34H30.7499C31.9906 34 33 32.9906 33 31.75V6H8.5Z" fill="white"/>
