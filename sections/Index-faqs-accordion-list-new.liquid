{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px!important;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px!important;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px!important;
        padding-bottom: {{ section.settings.padding_bottom }}px!important;
      }
    }
  {%- endstyle -%}

{%- if section.settings.main_heading_text != blank or section.settings.main_button_link != blank or section.settings.main_information_text != blank or section.blocks.size > 0 or section.settings.main_desktop_video != blank or section.settings.main_desktop_image != blank -%}
  <div class="section-{{ section.id }}-padding Index_faqs_accordion_list_main_new tw-pt-[56px] tw-pb-0 md:tw-py-[56px] xl:tw-py-[96px]" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Index_faqs_accordion_list_inner_new">
        <div class="Index_faqs_accordion_list_sides_new">
          {%- if section.settings.main_heading_text != blank or section.settings.main_button_link != blank or section.settings.main_information_text != blank or section.blocks.size > 0 -%}
            <div class="Index_faqs_accordion_list_sides_mainboths_new">
              <div class="Index_faqs_accordion_list_sides_innerboths_new">
                {%- if section.settings.main_heading_text != blank -%}
                  <div class="Index_faqs_accordion_list_sides_innerboths_maintitle_new">
                    <div class="Common_title_new Index_faqs_accordion_list_sides_innerboths_innertitle_new">
                      <h2>{{ section.settings.main_heading_text }}</h2>
                    </div>
                  </div>
                {%- endif -%}
                {%- if section.blocks.size > 0 -%}
                  <div class="Index_faqs_accordion_list_sides_innerboths_mainloops_new">
                    <div class="Index_faqs_accordion_list_sides_innerboths_innerloops_new">
                      <div class="accordion">
                        <ul class="list-unstyled">
                          {%- for block in section.blocks -%}
                            {%- if block.settings.title != blank and block.settings.infos != blank -%}
                              <li{% if forloop.first %} class="open"{% endif %}>
                                {%- if block.settings.title != blank -%}
                                  <div class="question">
                                    <h4>{{ block.settings.title }}</h4>
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.infos != blank -%}
                                  <div class="answer"{% if forloop.first %} style="display: block;"{% endif %}>
                                    {{ block.settings.infos }}
                                  </div>
                                {%- endif -%}
                              </li>
                            {%- endif -%}
                          {%- endfor -%}
                        </ul>
                      </div>
                    </div>
                  </div>
                {%- endif -%}
                {%- if section.settings.main_button_text != blank and section.settings.main_button_link != blank -%}
                  <div class="Index_faqs_accordion_list_sides_innerboths_mainbutton_new">
                    <div class="Index_faqs_accordion_list_sides_innerboths_innerbutton_new">
                      <a href="{{ section.settings.main_button_link }}" class="button">
                        {{ section.settings.main_button_text }}  
                      </a>
                    </div>
                  </div>
                {%- endif -%}
                {%- if section.settings.main_information_text != blank -%}
                  <div class="Index_faqs_accordion_list_sides_innerboths_maininfos_new Mobile_only_new">
                    <div class="Index_faqs_accordion_list_sides_innerboths_innerinfos_new">
                      {{ section.settings.main_information_text }}
                    </div>
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
          {%- if section.settings.main_desktop_video != blank or section.settings.main_desktop_image != blank -%}
            <div class="Index_faqs_accordion_list_sides_maindesktop_new Desktop_only_new">
              <div class="Index_faqs_accordion_list_sides_innerdesktop_new">
                <div class="Index_faqs_accordion_list_sides_innerdesktop_boths_new">
                  {%- if section.settings.main_desktop_video != blank -%}
                    <div class="Index_faqs_accordion_list_sides_innerdesktop_boths_videoimage_new">
                      {{ section.settings.main_desktop_video | video_tag: class: 'Full_video_new', image_size: 'master', controls: false, autoplay: true, loop: true }}
                    </div>
                  {% else %}  
                    {%- if section.settings.main_desktop_image != blank -%}
                      <div class="Index_faqs_accordion_list_sides_innerdesktop_boths_videoimage_new">
                        {{
                          section.settings.main_desktop_image | 
                          image_url: width: img.width | 
                          image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                          image_aspect_ratio: 1.1,
                          fetchpriority: 'auto', 
                          class:'Full_image_new'
                        }}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                </div>
                {%- if section.settings.main_outer_image != blank and section.settings.main_inside_image != blank -%}
                  <div class="Index_faqs_accordion_list_sides_innerdesktop_maincustom_new">
                    <div class="Index_faqs_accordion_list_sides_innerdesktop_innercustom_new">
                      {%- if section.settings.main_outer_image != blank -%}
                        <div class="Index_faqs_accordion_list_sides_innerdesktop_innercustom_mainouter_new">
                          <div class="Index_faqs_accordion_list_sides_innerdesktop_innercustom_innerouter_new spin">
                            {{
                              section.settings.main_outer_image | 
                              image_url: width: img.width | 
                              image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                              fetchpriority: 'auto', 
                              class:'Icon_image_new'
                            }}
                          </div>
                        </div>
                      {%- endif -%}
                      {%- if section.settings.main_inside_image != blank -%}
                        <div class="Index_faqs_accordion_list_sides_innerdesktop_innercustom_maininside_new">
                          <div class="Index_faqs_accordion_list_sides_innerdesktop_innercustom_innerinside_new">
                            {{
                              section.settings.main_inside_image | 
                              image_url: width: img.width | 
                              image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                              fetchpriority: 'auto', 
                              class:'Icon_image_new'
                            }}
                          </div>
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}  
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}  

